doctype html
html
  head
    title 게시글 목록
  body
    h1 게시글 목록
    table
      thead
        tr
          th 게시글번호
          th 제목
          th 내용
          th 작성일시
      tbody
        each post in posts
          tr
            td= post.id
            td= post.title
            td= post.content
            td= new Date(post.created_at).toLocaleString('ko-KR')

    form(action="/post/search_title" method="get")
      label(for="keyword") 제목 검색:
      input(type="text" name="keyword")
      button(type="submit") 검색

    form(action="/post/search_content" method="get")
      label(for="keyword") 내용 검색:
      input(type="text" name="keyword")
      button(type="submit") 검색

    form(action="/post/search_time" method="get")
      label(for="start_date") 시작날짜
      input(type="date" name="start_date")
      label(for="start_time") 시작시간
      input(type="time" name="start_time")
      label(for="end_date") 종료날짜
      input(type="date" name="end_date")
      label(for="end_time") 종료시간
      input(type="time" name="end_time")
      button(type="submit") 검색